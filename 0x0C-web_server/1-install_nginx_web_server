#!/usr/bin/env bash
# Script installs nginx, ensures it's listening on port 80, and
# configures it to return "Hello World!" for GET requests to root /

# Check if the script is run as root
if [ "$(id -u)" -ne 0 ]; then
    echo "Please run as root."
    exit 1
fi

# Install nginx
apt update || { echo "Failed to update package lists."; exit 1; }
apt install -y nginx || { echo "Failed to install Nginx."; exit 1; }

# Configure Nginx
cat <<EOF > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
    server_name _;

    location / {
        return 200 'Hello World!';
        add_header Content-Type text/plain;
    }
}
EOF

# Reload Nginx
systemctl reload nginx || { echo "Failed to reload Nginx."; exit 1; }

echo "Nginx installation and configuration completed successfully."
