#!/usr/bin/env bash
# Configure nginx to have a custom 404

# Ensure script running as root
if [ "$(id -u)" -ne 0 ]; then
	exit 1
fi

# Add the custom 404 page to /var/www/html/
cat <<EOF > /var/www/html/404.html
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 Not Found</title>
</head>
<body>
    <h1>404 Not Found</h1>
    <p>The page you are looking for does not exist.</p>
</body>
</html>
EOF

# Configure nginx to have a custom 404
sed -i '/server {/a \
    error_page 404 /404.html;\n \
    location = /404.html {\n \
        internal;\n \
	return 404 /404.html;\n \
    }\n \
' /etc/nginx/sites-available/default

# Create the custom 404 page
echo "$CUSTOM_404_CONTENT" > /var/www/html/404.html

# Enable the custom configuration
ln -s /etc/nginx/sites-available/custom_404 /etc/nginx/sites-enabled/

# Test NGINX configuration and restart
nginx -t && systemctl restart nginx

# Reload nginx
# sudo service nginx restart
