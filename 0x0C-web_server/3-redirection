#!/bin/bash

# Check if the script is run as root
if [ "$(id -u)" -ne 0 ]; then
    echo "Please run as root."
    exit 1
fi

# Define the new location URL
NEW_LOCATION="https://example.com/new_location"

# Update the Nginx configuration using sed
sed -i '/location \/redirect_me {/a \        return 301 '$NEW_LOCATION';' /etc/nginx/sites-available/default

# Reload Nginx
service nginx restart

echo "Nginx configuration updated. /redirect_me is now redirecting to $NEW_LOCATION with a 301 Moved Permanently redirect."
