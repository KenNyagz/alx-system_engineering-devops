#!/usr/bin/env bash
# Configures Nginx server so that "/redirect_me" is redirecting to another page
# with code '301 Moved Permanently'

redirection_config="\
    location /redirect_me {\n\
        return 301 http://example.com/new_page;\n\
    }\n"

sudo sed -i "/server {/a $redirection_config" /etc/nginx/sites-available/default

service nginx restart
